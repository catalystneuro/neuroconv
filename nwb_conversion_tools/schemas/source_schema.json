{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/catalystneuro/nwb-conversion-tools/tree/master/nwb_conversion_tools/schemas/source_schema.json",
  "title": "Source data and conversion options",
  "description": "Schema for the source data and conversion options",
  "version": "0.1.0",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "additionalProperties": false,
    "source files": {
      "additionalProperties": false,
      "type": "object",
      "required": [
        "raw_data",
        "processed_data"
      ],
      "properties": {
        "raw_data": {
          "type": "string",
          "format": "file"
        },
        "processed_data": {
          "type": "string",
          "format": "directory"
        }
      }
    },
    "conversion options": {
      "type": "object",
      "properties": {
        "add_raw": {
          "type": "boolean",
          "default": true
        },
        "add_processed": {
          "type": "boolean",
          "default": true
        },
        "add_behavior": {
          "type": "boolean",
          "default": true
        }
      }
    }
  }
}
